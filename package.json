{
  "name": "@bancoin/bancoin-browser-bus",
  "version": "0.2.1",
  "main": "dist/browser-bus.min.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:bancoinplatform/bancoin-browser-bus.git"
  },
  "bugs": {
    "url": "https://github.com/bancoinplatform/bancoin-browser-bus/issues"
  },
  "devDependencies": {
    "@types/jest": "^24.0.4",
    "browserify": "^16.2.3",
    "jest": "^24.1.0",
    "ts-jest": "^23.10.5",
    "ts-utils": "^6.0.7",
    "typescript": "^3.3.3",
    "uglifyjs": "^2.4.11"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/*test.+(ts)"
    ]
  },
  "scripts": {
    "patch": "npm version patch && npm publish && git push",
    "prepare": "npm run build",
    "preversion": "npm run test",
    "postversion": "npm publish",
    "postpublish": "git push",
    "build": "tsc --build ./ && npm run _build-full",
    "test": "jest",
    "_build-full": "browserify ./dist/index.js -s bus -o ./dist/browser-bus.js && uglifyjs ./dist/browser-bus.js -o ./dist/browser-bus.min.js"
  },
  "dependencies": {
    "@types/node": "^11.9.4",
    "typed-ts-events": "^1.0.5"
  }
}
